<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_marginTop="?attr/actionBarSize"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="ContentDescription">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/ic_logo"/>


        <TextView
            android:id="@+id/about_version"
            style="@style/ItemText.Gray.Normal"
            android:layout_marginTop="@dimen/margin_normal"
            tools:text="v1.0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:paddingTop="@dimen/margin_normal">

            <TextView
                android:id="@+id/about_update"
                style="@style/About.ItemLable"
                android:text="@string/about.update"/>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/about_feedback"
                style="@style/About.ItemLable"
                android:text="@string/about.feedback"/>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/about_author"
                style="@style/About.ItemLable"
                android:text="@string/about.author"/>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/about_share"
                style="@style/About.ItemLable"
                android:text="@string/about.share"/>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/about_thanks"
                style="@style/About.ItemLable"
                android:text="@string/about.thanks"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_larger"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:paddingTop="@dimen/margin_normal"
            >

            <TextView
                android:id="@+id/about_backup"
                style="@style/About.ItemLable"
                android:text="@string/about.backup"/>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/about_restore"
                style="@style/About.ItemLable"
                android:text="@string/about.restore"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>